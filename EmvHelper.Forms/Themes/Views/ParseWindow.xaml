<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:based="clr-namespace:EmvHelper.Support.UI.Units;assembly=EmvHelper.Support"
    xmlns:views="clr-namespace:EmvHelper.Forms.UI.Views">

    <Style
        TargetType="{x:Type views:ParseWindow}"
        BasedOn="{StaticResource {x:Type based:DarkWindow}}">
        <Setter Property="Content">
            <Setter.Value>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"/>

                    <Button Grid.Row="1"
                            Content="Parse"/>
                    
                    <TextBox Grid.Row="2"/>
                
                </Grid>
            </Setter.Value>
        </Setter>
        
    </Style>

</ResourceDictionary>